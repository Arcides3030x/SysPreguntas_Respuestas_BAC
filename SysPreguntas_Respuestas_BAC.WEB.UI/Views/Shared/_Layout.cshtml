<!DOCTYPE html>
<html lang="en">
<head>
        <meta name="robots" content="noindex, nofollow">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SysPreguntas_Respuestas_BAC.WEB.UI</title>
    <script src="~/js/site.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SysPreguntas_Respuestas_BAC.WEB.UI.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link href="~/css/output.css" rel="stylesheet" />
    <link href="~/site.css" rel="stylesheet" />
    <link href="~/output.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />


    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
    <header>
        <style>
            /* Desactivar scroll horizontal */
            body {
                overflow-x: hidden;
            }
        </style>
        <!-- Require css -->
        <style>
            .scroll-hidden::-webkit-scrollbar {
                height: 0px;
                background: transparent;
                /* make scrollbar transparent */
            }
        </style>

        <nav class="fixed top-0 z-50 w-full bg-white border-b border-gray-200">
            <div class="px-3 py-3 lg:px-5 lg:pl-3">
                <div class="flex items-center justify-between">
                    <div class="flex items-center justify-start rtl:justify-end">
                        <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar" aria-controls="logo-sidebar" type="button" class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200">
                            <span class="sr-only">Open sidebar</span>
                            <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
                            </svg>
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="flex ms-2 md:me-24">
                            <img src="~/img/BAC_Credomatic_logo.svg" class="h-10 me-5" alt="FlowBite Logo" />
                        </a>
                    </div>

                    <div class="flex items-center">
                        <div class="flex items-center">
                            <div class="flex items-center ms-3">
                                <div>
                                    <button type="button" class="flex text-sm bg-gray-800 rounded-full focus:ring-4 focus:ring-gray-300" aria-expanded="false" data-dropdown-toggle="dropdown-user">
                                        <span class="sr-only"></span>

                                        <img class="w-8 h-8 rounded-full"
                                             src="@(string.IsNullOrEmpty(User.FindFirst("urlUsuario")?.Value)
                 ? "https://flowbite.com/docs/images/people/profile-picture-5.jpg"
                 : User.FindFirst("urlUsuario")?.Value)"
                                             alt="user photo">
                                    </button>
                                </div>

                                <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded shadow" id="dropdown-user">
                                    <div class="px-4 py-3" role="none">
                                        <p class="text-sm text-gray-900" role="none">
                                           
                                            @User.FindFirst("NombreUsuario")?.Value
                                        </p>
                                        <p class="text-sm font-medium text-gray-900 truncate" role="none">
                                           
                                            @User.FindFirst("CorreoUsuario")?.Value
                                        </p>
                                    </div>
                                    <ul class="py-1" role="none">
                                        <li>
                                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" data-bs-toggle="modal" data-bs-target="#confirmLogoutModal" role="menuitem">Cerrar Sesion</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>


        <aside id="logo-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen pt-20 transition-transform -translate-x-full bg-white border-r border-gray-200 sm:translate-x-0" aria-label="Sidebar">
            <div class="h-full px-3 pb-4 overflow-y-auto bg-white">
                <ul class="space-y-2 font-medium">
                    
                    <li>
                        <a href="@Url.Action("Index", "Home")" class="flex items-center p-2 text-gray-900 rounded-lg  hover:bg-gray-100  group">
                            <svg class="w-6 h-6 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 9h3m-3 3h3m-3 3h3m-6 1c-.306-.613-.933-1-1.618-1H7.618c-.685 0-1.312.387-1.618 1M4 5h16a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1Zm7 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z" />
                            </svg>
                            <span class="flex-1 ms-3 whitespace-nowrap">Preguntas</span>
                        </a> 
                        <a href="@Url.Action("Crear", "Pregunta")" class="flex items-center p-2 text-gray-900 rounded-lg  hover:bg-gray-100  group">
                            <svg class="w-6 h-6 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 9h3m-3 3h3m-3 3h3m-6 1c-.306-.613-.933-1-1.618-1H7.618c-.685 0-1.312.387-1.618 1M4 5h16a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1Zm7 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z" />
                            </svg>
                            <span class="flex-1 ms-3 whitespace-nowrap">Crear Pregunta</span>
                        </a> 
                        <a href="@Url.Action("MisPreguntas", "Pregunta")" class="flex items-center p-2 text-gray-900 rounded-lg  hover:bg-gray-100  group">
                            <svg class="w-6 h-6 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 9h3m-3 3h3m-3 3h3m-6 1c-.306-.613-.933-1-1.618-1H7.618c-.685 0-1.312.387-1.618 1M4 5h16a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1Zm7 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z" />
                            </svg>
                            <span class="flex-1 ms-3 whitespace-nowrap">Mis Preguntas</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>


        <div class="p-4 sm:ml-64">
            <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg  mt-14">
                @RenderBody() <!-- Aquí se renderiza el contenido de la vista -->
            </div>
        </div>



    </header>


    <script>
        function openModal() {
            var modal = document.getElementById("modal");
            modal.classList.remove("hidden");
        }

        function closeModal() {
            var modal = document.getElementById("modal");
            modal.classList.add("hidden");
        }
    </script>


    <div class="modal fade" id="confirmLogoutModal" tabindex="-1" aria-labelledby="confirmLogoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="mt-2 text-center sm:ml-4 sm:text-left">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmLogoutModalLabel">¿Deseas cerrar sesión?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>


                    <div class=" modal-footer items-center gap-2 mt-3 text-sm sm:flex">

                        <button id="logoutButton" data-bs-dismiss="modal" href="@Url.Action("CerrarSesion", "Usuario")" class="w-full mt-2 p-2.5 flex-1 text-white bg-red-600 rounded-md ring-offset-2 ring-red-600 focus:ring-2">
                            Cerrar Sesión
                        </button>

                        <button aria-label="Close" data-bs-dismiss="modal" class="w-full mt-2 p-2.5 flex-1 text-gray-800 rounded-md border ring-offset-2 ring-indigo-600 focus:ring-2">
                            Cancelar
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById("logoutButton").addEventListener("click", function () {
            window.location.href = "/Usuario/CerrarSesion";
        });
    </script>



    <br />
    <br />
    <br />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.tailwindcss.com"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var menuButton = document.getElementById('menuButton');
            var closedIcon = document.getElementById('closedIcon');
            var openIcon = document.getElementById('openIcon');
            var mobileMenu = document.getElementById('mobileMenu');

            menuButton.addEventListener('click', function () {
                toggleMenu();
            });

            function toggleMenu() {
                closedIcon.classList.toggle('hidden');
                openIcon.classList.toggle('hidden');
                mobileMenu.classList.toggle('hidden');
            }
        });
    </script>
    <script>
        function confirmarCerrarSesion() {
            if (confirm('¿Estás seguro de que deseas cerrar sesión?')) {
                window.location.href = '@Url.Action("CerrarSesion", "Usuario")'; // O la ruta correcta a tu método CerrarSesion
            }
        }
    </script>
</body>


</html>
